{
  "name": "terra-parity",
  "displayName": "Terraform/terragrunt environments parity",
  "description": "Quickly find, compare and align code of corresponding infra resources across environments.",
  "icon": "images/logo.png",
  "version": "0.0.3",
  "publisher": "lees-oz",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terra-parity.run",
        "title": "Terra parity"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Terra parity",
      "properties": {
        "terra-parity.Environment paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Paths to folders that contain environments (dev, test, prod, etc.) under them. Specify two or more paths using \"Add Item\" button"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
